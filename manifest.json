{
    "manifest_version": 2,
    "name": "MathJax Plugin for Github",
    "description": "Renders Github equations with MathJax",
    "version": "0.3.0",
    "permissions": ["https://github.com/*", "https://gist.github.com/*"],
    "web_accessible_resources": ["mathjax_config.js", "MathJax/*", "dynamic_math.js"],
    "content_scripts": [
        {
            "matches": ["https://github.com/*", "https://gist.github.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
